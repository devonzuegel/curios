  "name": "curios",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/classnames": "^2.2.3",
    "@types/lodash": "^4.14.85",
    "@types/ramda": "^0.24.17",
    "@types/react-redux": "^5.0.11",
    "@types/react-router-dom": "^4.0.8",
    "@types/react-router-redux": "^5.0.9",
    "@types/redux-thunk": "^2.1.0",
    "apollo-client": "^2.0.3",
    "autoprefixer": "7.1.2",
    "awesome-typescript-loader": "^3.4.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "css-loader": "0.28.4",
    "dotenv": "4.0.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "extract-text-webpack-plugin": "3.0.0",
    "file-loader": "0.11.2",
    "fs-extra": "3.0.1",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.5.0",
    "html-webpack-plugin": "2.29.0",
    "husky": "^0.14.3",
    "jest": "20.0.4",
    "lint-staged": "^4.2.3",
    "nightwatch": "^0.9.16",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "2.0.6",
    "prettier": "^1.7.4",
    "promise": "8.0.1",
    "ramda": "^0.25.0",
    "react": "^16.0.0",
    "react-apollo": "^1.4.0",
    "react-dev-utils": "^4.0.1",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.8",
    "redux": "^3.7.2",
    "redux-persist": "^4.10.1",
    "redux-thunk": "^2.2.0",
    "selenium-download": "^2.0.10",
    "source-map-loader": "^0.2.1",
    "style-loader": "0.18.2",
    "sw-precache-webpack-plugin": "0.11.4",
    "ts-jest": "^20.0.7",
    "tslint": "^5.2.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.0.0",
    "typescript": "~2.4.0",
    "url-loader": "0.5.9",
    "webpack": "3.5.1",
    "webpack-dev-server": "2.7.1",
    "webpack-manifest-plugin": "1.2.1",
    "whatwg-fetch": "2.0.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css}": ["prettier --write", "git add"]
  },
  "scripts": {
    "postinstall": "node test/nightwatch.conf.js",
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test:unit": "node scripts/test.js --env=jsdom",
    "pretest:functional": "yarn build; serve -s build &",
    "test:functional": "nightwatch --config test/nightwatch.conf.js",
    "test": "yarn test:unit && yarn test:functional",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.12",
    "@storybook/react": "^3.2.12",
    "@types/enzyme": "^3.1.0",
    "@types/graphql": "^0.11.6",
    "@types/jest": "^21.1.2",
    "@types/node": "^8.0.37",
    "@types/react": "^16.0.11",
    "@types/react-dom": "^16.0.1",
    "@types/storybook__addon-actions": "^3.0.1",
    "@types/storybook__react": "^3.0.5",
    "enzyme": "^3.1.0",
    "postcss-cssnext": "^3.0.2",
    "postcss-import": "^11.0.0"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"],
    "setupFiles": ["<rootDir>/config/polyfills.js"],
    "testMatch": ["<rootDir>/src/**/?(*.)test.ts?(x)"],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": ["[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"],
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1",
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.test.json"
      }
    }
  },
  "babel": {
    "presets": ["react-app"]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
